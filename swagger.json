{
    "openapi": "3.0.0",
    "info": {
        "tilte": "Bank API",
        "description": "API simples de gerenciamento de transações bancárias",
        "contact": { 
            "email": "ericdeofaria@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Local Server"
        }
    ],
    "paths": {
        "/clients": {
            "post": {
                "summary": "Cadastro de Clientes",
                "description": "Rota responsável pelo cadastro de novos clientes",
                "tags": ["Clients"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/Client"
                            },
                            "examples": {
                                "Client": {
                                    "value": {
                                        "name": "Elon Musk",
                                        "cpf": "352.194.810-29",
                                        "password": "senha123"
                                    }
                                    
                                }
                               
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Blank fields or invalid CPF.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/Error"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "CPF already registered.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/Error"
                                }
                            }
                        }
                    },
                    "201": {
                        "description": "Created.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/Client"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "summary": "Login",
                "description": "Rota responsável pela autenticação de clientes",
                "tags": ["Clients"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/Login"
                            },
                            "examples": {
                                "Login": {
                                    "value": {
                                        "cpf": "352.194.810-29",
                                        "password": "senha123"
                                    }
                                    
                                }
                               
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Blank fields or invalid CPF.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/Error"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "CPF already registered.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/Error"
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "Sucessful login",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                                "type": "string",
                                                "description": "Authentication token"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Client": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "cpf": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "Login": {
                "type": "object",
                "properties": {
                    "cpf": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
